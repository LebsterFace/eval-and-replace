{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"ES2021"
		],
		"module": "CommonJS",
		"strict": true,
		"alwaysStrict": true,
		"moduleDetection": "force",
		"moduleResolution": "Node",
		"outDir": "out",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"noImplicitAny": true
	},
	"include": [
		"src/**/*.ts"
	]
}